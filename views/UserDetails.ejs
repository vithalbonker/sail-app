          display:block;
          margin: 10px 10px;
        }

        .edit-modal-content label{
          float: left;
        }

        #saveUser, #closeModal{
          float: left;
          display: inline;
          margin: 10px 10px;
        }


        /* Modal Content */
        .edit-modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 40px;
            border: 1px solid #888;
            width: 50%;
        }

