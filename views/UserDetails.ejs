        .create-modal-content {
            background-color: black;
            margin: auto;
            padding: 40px;
            border: 1px solid #888;
            width: 50%;
        }

        button.link{
          background:none!important;
          border:none;
          padding:0!important;
          color: -webkit-link;
          text-decoration:underline;
          cursor:pointer;
        }
        a:link, a:visited {
    color: #f6f900;
    text-decoration: underline;
    cursor: auto;
}

a:link:active, a:visited:active {
    color: white;
}

    </style>
